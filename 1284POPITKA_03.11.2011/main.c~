// Global enable interrupts
#asm("sei")

        while (1)
        {            

                // Place your code here  
                
 
                if(led_stat == 0) 
                {        
                        sprintf(data1,"M:%s",rx_buffer);
                        PORTB.3 = 1; 
                        led_stat = 1; 
                        lcd_gotoxy(0,0);
                        lcd_puts(data1);    
                        delay_ms(100);
                }                  
                else               
                {
                        PORTB.3 = 0;
                        led_stat = 0;  
                        
                        counter++;    
                        //lcd_puts(data1); 
